<!DOCTYPE html>
<html lang="en">

<head>
  <title>PasswordKeepR</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <!-- Font Awesome Link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
  <!-- Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=IM+Fell+DW+Pica+SC&display=swap" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=IM+Fell+DW+Pica:ital@0;1&display=swap" rel="stylesheet">


</head>

<body>
  <%- include('partials/_header') %>
<section id="mainContainer">
  <h1>Accounts</h1>


  <!-- Add select dropdown for sorting -->
  <div class="sortContainer">
  <label id ="sortBy" for="category">Filter By:</label>
  <select id="category" name="category">
    <!-- Categories will be dynamically populated here -->

  </select>
  <a class="newAccountButton" href="/new-account">Add New Account</a>
  </div>
  <div class="table-container">
  <table class="accountsTable">
    <thead>
      <tr>
        <th>Website</th>
        <th>Username</th>
        <th>Password</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody id="accounts-body">
      <!-- Accounts will be dynamically populated here -->
    </tbody>
  </table>
  </div>

  <!-- SCRIPTS -->
  <script src="/scripts/categoryDropdown.js"></script>
  <script src="/scripts/listeners.js"></script>
</section>
</body>

</html>
