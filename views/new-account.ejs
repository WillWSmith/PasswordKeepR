<!DOCTYPE html>
<html lang="en">
<head>
  <title>Add Account</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>
  <!-- Font Awesome Link -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=IM+Fell+DW+Pica+SC&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=IM+Fell+DW+Pica:ital@0;1&display=swap" rel="stylesheet">

</head>
<body>
<%- include('partials/_header') %>


    <main id="newAccountContainer">
      <h1>Add New Account</h1>
      <section>
        <form class="newAccount" action="/new-account" method="POST">
          <div>
            <label for="website">Website:</label>
            <input type="text" id="website" name="website" required>
          </div>
          <div>
            <label for="category">Category:</label>
            <select id="category" name="category_id" required>
              <option value="">Select a category...</option>
              <!--Select Category-->
            </select>
          </div>
          <div>
            <label for="username">Username:</label>
            <input type="text" id="username" name="username" required>
          </div>
          <div>
            <label for="password">Password:</label>
            <input type="password" id="password" name="password" required>
          </div>
          <div id="passwordStrengthMessage"></div>
          <button class="addAccountButton" type="submit">Add Account</button>
        </form>
        <div id="passwordContainer">
          <div id="generatePasswordHeader">Generate Password</div>
          <form id="passwordForm" style="display: none;">
            <label for="length">Password Length:</label>
            <input type="number" id="length" name="length" min="8" max="32" required><br><br>

            <label for="lowercase">Include Lowercase Letters:</label>
            <input type="checkbox" id="lowercase" name="lowercase" checked><br>

            <label for="uppercase">Include Uppercase Letters:</label>
            <input type="checkbox" id="uppercase" name="uppercase" checked><br>

            <label for="numbers">Include Numbers:</label>
            <input type="checkbox" id="numbers" name="numbers" checked><br>

            <label for="symbols">Include Symbols:</label>
            <input type="checkbox" id="symbols" name="symbols" checked><br><br>

            <button id="generate-password" type="submit">Generate</button>

            <div id="passwordOutput"><span id="generatedPassword"></span></div>
            <button id="copy-password" class="copyButton" type="button">Copy Password</button>

          </form>
        </div>
      </section>
    </main>
    <div id="footer-padding"></div>
    <%- include('partials/_footer') %>
      <!-- SCRIPTS -->
  <script src="/scripts/app.js"></script>
  <script src="/scripts/listeners.js"></script>
  <script src="/scripts/passwordGenerator.js"></script>
  </body>
</html>
